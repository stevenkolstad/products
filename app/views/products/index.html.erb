<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Manuf description</th>
      <th>Subcat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.manuf_description %></td>
        <td><%= link_to product.subcat.subcat_name, category_subcat_path(product.subcat.category, product.subcat) %></td>
        <td><%= link_to 'Show', category_subcat_product_path(product.subcat.category, product.subcat, product) %></td>
        <td><%= link_to 'Edit', edit_category_subcat_product_path(product.subcat.category, product.subcat, product) %></td>
        <td><%= link_to 'Destroy', category_subcat_product_path(product.subcat.category, product.subcat, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_category_subcat_product_path(params[:category_id], params[:subcat_id]) %>
